n=int(input("Enter number: "))
def perfect_number(n):
    sum = 0
    for x in range(1, n):
        if n % x == 0:
            sum += x
    return sum == n
    if sum==n:
            return True
    return False
if(perfect_number(n)):
    print(n,"is a perfect number")
else:
    print(n,"is not a perfect number")
